@model IEnumerable<Oblig2.Models.Entities.Blog>

@{
    ViewData["Title"] = "Index";
}

<h1>Blog</h1>

<p>
    <a asp-action="CreateBlog">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Owner.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeCreated)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @{
                    int maxNameLength = 100;
                    string nameContent = item.Name.Length <= maxNameLength ? item.Name : item.Name.Substring(0, maxNameLength) + "...";
                }
                @Html.DisplayFor(modelItem => nameContent)
            </td>
            <td>
                @{
                    int maxDescriptionLength = 100;
                    string descriptionContent = item.Description.Length <= maxDescriptionLength ? item.Description : item.Description.Substring(0, maxDescriptionLength) + "...";
                }
                @Html.DisplayFor(modelItem => descriptionContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Owner.Email)
            </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TimeCreated)
                        </td>
            <td>
                <a asp-action="DetailsBlog" asp-route-id="@item.BlogId">Details</a> |
                <a asp-action="Posts" asp-route-blogId="@item.BlogId" asp-route-isOpenId="@item.IsOpenForExternalWriters">Posts</a> |
            </td>


        </tr>
    }
    </tbody>
</table>