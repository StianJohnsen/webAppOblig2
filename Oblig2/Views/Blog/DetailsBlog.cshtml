@using Oblig2.Models.Entities
@model Blog

<head>
    <title>Details Post</title>
</head>
<body>
<div class="card-header">
    <div class="d-flex justify-content-between">
        <div>
            <h2>Title: @Model.Name</h2>
        </div>
        <div>
            <h2>Author: @Model.Owner.Email</h2>
        </div>

    </div>
</div>
<div>
    <textarea readonly style="width: 100%; height: auto;" rows="5">@Model.Description</textarea>
</div>
<div>
    <h3>Created: @Model.TimeCreated</h3>
</div>

</body>