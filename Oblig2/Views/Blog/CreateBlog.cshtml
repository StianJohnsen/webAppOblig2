@using Oblig2.Models.ViewModels
@model BlogViewModel


<!DOCTYPE html>

<html>
<head>
    <title>New Blog</title>
</head>
<body>
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateBlog" method="post">
            <div>
                <label asp-for="Name">Name:</label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Description">Description:</label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="IsOpenForExternalWriters">Open:</label>
                <input type="checkbox" asp-for="IsOpenForExternalWriters"/>
                <span asp-validation-for="IsOpenForExternalWriters" class="text-danger"></span>
            </div>

            <button type="submit">Create Blog</button>
        </form>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    </div>
</div>
</body>
</html>

@section Scripts
{@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}